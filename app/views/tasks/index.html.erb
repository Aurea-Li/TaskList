
<div class="index-task-page">

  <h2> Your Tasks </h2>

  <ul>

    <% @tasks.each do |task| %>

    <li>

      <% if task.completion_date.nil? %>

      <%= link_to task_path(task.id) do %>
      <strong> <%= task.name %> : <%= task.description %> </strong>
      <% end %>

      <div class= "task-links">
        <%= link_to "Mark Complete", complete_task_path(task.id), method: :patch %>
        <% else %>
        <%= link_to task_path(task.id) do %>
        <del> <strong> <%= task.name %> : <%= task.description %> </strong> </del>
        <% end %>
        <div class= "task-links">
          <%= link_to "Unmark Complete", uncomplete_task_path(task.id), method: :patch %>
          <% end %>

          <%= link_to "Edit Task", edit_task_path(task.id) %>
          <%= link_to "Delete Task", task_path(task.id), method: :delete, data: {confirm: "Are you sure you want to delete #{task.name}"} %>
        </div>
      </li>
      <% end %>
    </ul>

  </div>
