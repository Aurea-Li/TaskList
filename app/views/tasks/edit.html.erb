<div class="edit-task-page">
  <%= form_with model: @task, class: 'edit-task-form' do |f| %>

    <h2>Edit Task Form</h2>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.submit "Edit Task", class: "edit-task-submit-button" %>

  <% end %>

  <%= link_to "Home", tasks_path %>
</div>
